<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.touristnyc.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="153dp"
            android:layout_height="212dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/noavatar"
            android:scaleType="fitStart"/>

        <Button
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="@string/user_profile"
            android:id="@+id/detailsButton"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="@string/points_of_interest"
            android:id="@+id/interestButton"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="@string/groups"
            android:id="@+id/groupsButton"
            android:layout_row="3"
            android:layout_column="0" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="174dp"
        android:layout_height="409dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowSpan="4"
        android:weightSum="1"
        android:id="@+id/infoLayout"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/newtrip"
        android:layout_alignStart="@+id/newtrip"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Username: "
            android:id="@+id/usernameLabel"
            android:textSize="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/usernameField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password: "
            android:id="@+id/passwordLabel"
            android:textSize="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Confirm password: "
            android:id="@+id/cpasswordLabel"
            android:textSize="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email: "
            android:id="@+id/emailLabel"
            android:textSize="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Phone number: "
            android:id="@+id/phoneLabel"
            android:textSize="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save changes"
            android:id="@+id/update" />
    </LinearLayout>

    <Button
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="New Trip"
        android:id="@+id/newtrip"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/newtrip"
        android:layout_alignStart="@+id/newtrip"
        android:layout_above="@+id/newtrip"
        android:weightSum="1"
        android:visibility="gone"
        android:id="@+id/interestLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Points of Interest"
            android:id="@+id/interestHeading"
            android:textSize="20dp" />

        <ExpandableListView
            android:layout_width="178dp"
            android:layout_height="159dp"
            android:id="@+id/expandableListView" />

        <Button
            android:layout_width="172dp"
            android:layout_height="66dp"
            android:text="Add New Interest"
            android:id="@+id/addPOIButton" />

        ListView
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:id="@+id/listView"
            android:layout_weight="0.30" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/newtrip"
        android:layout_alignStart="@+id/newtrip"
        android:layout_above="@+id/newtrip"
        android:weightSum="1"
        android:visibility="gone"
        android:id="@+id/groupLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My groups"
            android:id="@+id/groupHeading"
            android:textSize="20dp" />

        <ExpandableListView
            android:layout_width="178dp"
            android:layout_height="159dp"
            android:id="@+id/lv2" />

        <Button
            android:layout_width="172dp"
            android:layout_height="66dp"
            android:text="Add New Group"
            android:id="@+id/addGroupsButton" />

        ListView
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:id="@+id/listView"
        android:layout_weight="0.30" />
    </LinearLayout>

</RelativeLayout>
